# CrediCarbon Environment Configuration

# Core Application Settings
REACT_APP_SITE_NAME=CrediCarbon Trading Platform
REACT_APP_DOMAIN=credicarbon.netlify.app
REACT_APP_BACKEND_URL=https://carboncredits-backend.railway.app

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/credicarbon

# Authentication & Security
JWT_SECRET=credicarbon-secret-key-2025
JWT_EXPIRATION=24h

# Build Configuration
CI=false
GENERATE_SOURCEMAP=false

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cache Configuration
CACHE_TTL=3600

# Logging
LOG_LEVEL=error

# CORS Configuration
CORS_ORIGIN=https://credicarbon.netlify.app

# Feature Flags
ENABLE_MARKETPLACE=true
ENABLE_CARBON_CALCULATOR=true